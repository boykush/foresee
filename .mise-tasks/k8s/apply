#!/usr/bin/env bash
#MISE description="Apply all k8s resources (platform + apps)"
#MISE arg "env" help="Environment name (default: local)"

ENV="${1:-local}"

# Apply platform first
echo "Applying platform resources for environment: ${ENV}..."
mise run k8s:apply-platform "${ENV}"

# Then apply apps
echo "Applying application resources for environment: ${ENV}..."
kubectl apply -k "k8s/apps/overlays/${ENV}"
